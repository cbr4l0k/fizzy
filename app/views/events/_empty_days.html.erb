<% if earliest.present? %>
  <% if earliest == latest %>
    <div class="events--none txt-align-center">
      <h2><%= event_day_title(earliest) %></h2>
      <p>No activity</p>
    </div>
  <% elsif earliest < latest %>
    <div class="events--none txt-align-center">
      <h2><%= event_day_title(earliest) %> - <%= event_day_title(latest) %></h2>
      <p>No activity for <%= (latest - earliest).seconds.in_days.round + 1 %> days</p>
    </div>
  <% end %>
<% else %>
  <p class="events--none txt-align-center">No more activity.</p>
<% end %>
